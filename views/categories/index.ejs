<h2 class="center">Category Table</h2>

<table class="table">
  <thead>
    <tr>
      <th>Category</th>
      <th>Nominal</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% categories.forEach(category => {%>
      <tr>
        <td>
          <a href="<%= `/categories/${category._id}` %>">
            <%= category.category %>
          </a>
        </td>
        <td><%= category.nominal %></td>
        <td>
          <a href="<%= `/categories/${category._id}/edit` %>">
            edit
          </a>
        </td>
        <td>
          <a href="<%= `/categories/${category._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">
            delete
          </a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>

<button type="button">
  <a href="users" style="color:white;">
    back
  </a>
</button>