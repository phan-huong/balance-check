<div class="data-form">
  <form action="<%=`/categories/${category._id}/update?_method=PUT`%>" method="POST" >
    <h2>Edit Category:</h2>
    <label for="inputCategory">Category</label>
    <input type="text" name="category" id="inputCategory" value="<%= category.category %>" placeholder="Category" autofocus>
    <label for="inputNominal">Nominal</label>
    <input type="text" name="nominal" id="inputNominal" value="<%= category.nominal %>" placeholder="Nominal" required>
    <label for="inputDescription">Description</label>
    <input type="text" name="description" id="inputDescription" value="<%= category.description %>" placeholder="Description" required>
    <button type="submit">Update</button>

    <br>
    <button type="button">
      <a href="/categories" style="color:white;">
        back
      </a>
    </button>
  </form>
</div>
