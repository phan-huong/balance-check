<h2 class="center">My Balance</h2>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>My Balance</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% balances.forEach(balance => {%>
      <tr>
        <td><%= balance.date %></td>
        <td><%= balance.balance %></td>
        <td>
          <a href="<%= `/balances/${balance._id}/edit` %>">
            edit
          </a>
        </td>
        <td>
          <a href="<%= `/balances/${balance._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">
            delete
          </a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
