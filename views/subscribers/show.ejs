<h1>Subscribers Data for <%= subscriber.name %></h1>

<table class="table">
  <tr>
    <th>Name</th>
    <td><%= subscriber.name %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= subscriber.email %></td>
  </tr>
  <tr>
    <th>Zip Code</th>
    <td><%= subscriber.zipCode %></td>
  </tr>
</table>

<p>This subscriber has <%= subscriber.courses.length %> associated course(s)</p>

<div>
  <button type="button">
    <a href="/subscribers">
      View all subscribers
    </a>
  </button>
</div>
<div>
  <button type="button">
    <a href="<%= `/subscribers/${subscriber._id}/edit` %>">
      Edit subscriber details
    </a>
  </button>
</div>
<div>
  <button type="button">
    <a href="<%= `/subscribers/${subscriber._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">
      Delete
    </a>
  </button>
</div>
